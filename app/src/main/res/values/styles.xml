<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IntermediateTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_back</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="Shadow">
        <item name="android:shadowColor">@color/black</item>
        <item name="android:shadowDx">@integer/shadowDxCNL</item>
        <item name="android:shadowDy">@integer/shadowDyCNL</item>
        <item name="android:shadowRadius">@integer/shadowRadiusCNL</item>
    </style>

    <!--PORTRAIT-->

    <style name="CharacterName" parent="Shadow">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/marvel_regular</item>
    </style>

    <style name="FragmentCharacterName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_text_size_frag</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/marvel_regular</item>
    </style>

    <style name="FragmentCharacterDescription" parent="FragmentCharacterName">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/body_text_size_frag</item>
    </style>

    <!--LANDSCAPE-->

    <style name="CharacterNameLandscape" parent="Shadow">
        <item name="android:textSize">@dimen/title_text_size_double</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/marvel_regular</item>
    </style>

    <style name="FragmentCharacterNameLandscape" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_text_size_frag_double</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:fontFamily">@font/marvel_regular</item>
    </style>

    <style name="FragmentCharacterDescriptionLandscape" parent="FragmentCharacterNameLandscape">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/body_text_size_frag_double</item>
    </style>

    <!--TOOLBAR-->
    
    <style name="CollapseToolbarTheme" parent="Shadow">
        <item name="android:textColor">@color/marvel_yellow</item>
        <item name="android:fontFamily">@font/marvel_regular</item>
    </style>

    <style name="ExpandedToolbarTheme" parent="Shadow">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/marvel_regular</item>

    </style>

</resources>
