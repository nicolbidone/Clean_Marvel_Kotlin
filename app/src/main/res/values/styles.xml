<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="IntermediateTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowFullscreen">true</item>
    </style>
    
    <style name="SplashTheme" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@drawable/splash_back</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="CharacterName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_text_size</item>
        <item name="android:textColor">#B71C1C</item>
        <item name="android:fontFamily">@font/marvel_regular</item>
        <item name="android:shadowColor">#000000</item>
        <item name="android:shadowDx">2</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">2</item>
    </style>

    <style name="FragmentCharacterName" parent="TextAppearance.AppCompat">
        <item name="android:textSize">@dimen/title_text_size_frag</item>
        <item name="android:textColor">#801414</item>

        <item name="android:fontFamily">@font/marvel_regular</item>
    </style>

    <style name="FragmentCharacterDescription" parent="FragmentCharacterName">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">@dimen/body_text_size_frag</item>
    </style>

    <style name="ToolbarTheme" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:fontFamily">@font/dokdoregular</item>
    </style>

</resources>
