<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".animation.SplashActivity">

    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/marvel_comics_logo_small"
            android:id="@+id/image_rotation"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="@dimen/absY"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="@dimen/absX"
            android:layout_marginStart="@dimen/absX"
            android:layout_marginBottom="@dimen/absY"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/absX"
            android:layout_marginRight="@dimen/absX"
            app:layout_constraintHorizontal_bias="@dimen/bias"
            app:layout_constraintVertical_bias="@dimen/bias"/>
</android.support.constraint.ConstraintLayout>
