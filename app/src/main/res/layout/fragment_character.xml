<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/edit_name"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:minWidth="@dimen/super_hero_image_width_frag"
        android:minHeight="@dimen/super_hero_image_height_frag"
        android:layout_gravity="center"
        app:srcCompat="@android:color/holo_blue_bright" />

    <TextView
        android:id="@+id/text_characterName"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:textSize="@dimen/title_text_size_frag"
        android:text="Your name" />

    <TextView
        android:id="@+id/text_characterDesc"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:textSize="@dimen/body_text_size_frag"
        android:text="Your description" />

</LinearLayout>